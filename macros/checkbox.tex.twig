{% macro checkbox(var, value) %}
	{% if value is empty %}
		{% if var %}$\boxtimes${% else %}$\square${% endif %}
	{% else %}
		{% if var == value %}$\boxtimes${% else %}$\square${% endif %}
	{% endif %}
{% endmacro %}
